<div class="container mx-auto bg-white shadow-md rounded">
<%= @room_id %>

<%= if @user_name do %>
    <%= render(PlanningPokerWeb.BoardView, "board.html", assigns) %>
<% else %>
<%= live_component @socket, PlanningPokerWeb.RoomLive.UserFormComponent, id: @room_id, room_id: @room_id, trigger_submit: false, errors: [] %>
<% end %>

<span><%= live_patch "Log in", to: Routes.room_path(@socket, :log_in, @room_id) %></span>
<%= if @live_action == :log_in do %>
<%= live_modal @socket, PlanningPokerWeb.RoomLive.UserFormComponent,
    return_to: Routes.room_path(@socket, :index, @room_id) %>
<% end %>

</div>
